											.news-item__date= item.date

											.news-item__info
												.news-item__text= item.text

												a(href="#").news-item__link Читать далее

				.offset-xxl-1.col-xxl-2.col-lg-3.d-none.d-lg-block
					.news-slider-wrap
						.news-slider-wrap__title Другие статьи

						.swiper.news-slider.js-news-slider
							.swiper-wrapper
								-
									var list=[
										{img:'news-slide.jpg', title:'Что делать, если айфон тормозит', date:'25.12.2024', text:'В 2024 году Apple представил свой телефон'},
										{img:'news-slide.jpg', title:'Что делать, если айфон тормозит 2', date:'25.12.2024', text:'В 2024 году Apple'},
									]
								each item in list
									.swiper-slide.news-slider-item
										.news-slider-item__bg(style="background-image: url(/upload/"+item.img+")")

										.news-slider-item__wrap
											.news-slider-item__content
												.news-slider-item__title= item.title
												.news-slider-item__date= item.date

												.news-slider-item__info
													.news-slider-item__text= item.text

